@using Microsoft.AspNetCore.Components.Routing
@using MudBlazor
@inject NavigationManager NavigationManager

<div class="header-wrapper">
    <MudAppBar Fixed="true" Dense="false" Style="background-image:url(../images/GoxBitWeb.png)" Elevation="0" Class="py5 header header-bar">
        <!-- Left: Logo (kept untouched) -->
        <div class="logo">
            <MudLink Class="GoxBit" Href="/" Underline="Underline.None">GoxBit</MudLink>
        </div>

        <!-- Center: main navigation — visible on medium and larger screens -->
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <div class="center-menu" role="navigation" aria-label="Primary navigation">
                <MudGrid Spacing="1" Justify="Justify.Center" AlignItems="AlignItems.Center" Class="center-grid">
                    <MudItem>
                        <MudNavLink Class="custom-header-text" Href="Projects" Match="NavLinkMatch.Prefix">Projects</MudNavLink>
                    </MudItem>
                    <MudItem>
                        <MudNavLink Class="custom-header-text" Href="Models" Match="NavLinkMatch.Prefix">Models</MudNavLink>
                    </MudItem>
                    <MudItem>
                        <MudNavLink Class="custom-header-text" Href="Background" Match="NavLinkMatch.Prefix">Background</MudNavLink>
                    </MudItem>
                </MudGrid>
            </div>
        </MudHidden>

        <!-- Right: hamburger for small screens -->
        <MudHidden Breakpoint="Breakpoint.MdAndUp">
            <div class="mobile-menu" aria-hidden="false">
                <MudMenu Class="hamburger-menu" Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" AriaLabel="Open navigation menu">
                    <MudMenuItem OnClick='() => NavigateTo("/Projects")'>Projects</MudMenuItem>
                    <MudMenuItem OnClick='() => NavigateTo("/Models")'>Models</MudMenuItem>
                    <MudMenuItem OnClick='() => NavigateTo("/Background")'>Background</MudMenuItem>
                </MudMenu>
            </div>
        </MudHidden>
    </MudAppBar>
</div>

@code {
    private void NavigateTo(string uri) => NavigationManager.NavigateTo(uri);
}
